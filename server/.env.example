# =============================================
# CONFIGURACIÓN DEL SERVIDOR - WEB ALAHAS
# =============================================

# Puerto del servidor
PORT=3000

# =============================================
# BASE DE DATOS POSTGRESQL
# =============================================
# Opción 1: Usar DATABASE_URL (Railway/Producción)
DATABASE_URL=postgresql://user:password@host:port/database

# Opción 2: Variables individuales (Desarrollo local)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=bd_sh0p4l4h45
# DB_USER=postgres
# DB_PASSWORD=123456

# =============================================
# SMTP / EMAIL (Nodemailer)
# =============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-app-password
MAIL_FROM="Web Alahas <tu-email@gmail.com>"
MAIL_TO=destinatario@example.com

# =============================================
# JWT / AUTENTICACIÓN
# =============================================
JWT_SECRET=tu-secreto-super-seguro-cambiar-en-produccion
JWT_EXPIRES_IN=7d

# =============================================
# WHATSAPP
# =============================================
WHATSAPP_PHONE=51980656823

# =============================================
# CORS
# =============================================
# Para desarrollo local no es necesario (se usa default)
# Para producción, separar múltiples orígenes con comas
# CORS_ORIGIN=https://tu-app.vercel.app,https://www.tu-dominio.com

# =============================================
# CLOUDINARY (Almacenamiento de imágenes)
# =============================================
CLOUDINARY_CLOUD_NAME=tu-cloud-name
CLOUDINARY_API_KEY=tu-api-key
CLOUDINARY_API_SECRET=tu-api-secret

# =============================================
# ENTORNO
# =============================================
NODE_ENV=development
